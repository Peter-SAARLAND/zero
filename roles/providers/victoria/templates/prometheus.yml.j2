global:
  scrape_interval:     15s
  evaluation_interval: 15s

  external_labels:
    monitor: 'victoria'
    space: '{{ arc['space']['name'] }}'

#remote_write:
#  - url: http://{{ apollo_manager }}:8428/api/v1/write

# rule_files:
#   - "swarm_node.rules.yml"
#   - "swarm_task.rules.yml"

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - alertmanager:9093

scrape_configs:
  # - job_name: 'prometheus'
  #   static_configs:
  #     - targets: ['localhost:9090']
  
  - job_name: 'blackbox-exporter'
    metrics_path: /probe
    params:
      module: [http_backplane]
    static_configs:
      - targets:
        - http://portainer.{{ arc['space']['space_domain'] }}        
        - http://proxy.{{ arc['space']['space_domain'] }}
        - https://traefik.{{ arc['space']['space_domain'] }}:8443
        - https://grafana.{{ arc['space']['space_domain'] }}:8443
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ apollo_manager }}:9115  # The blackbox exporter's real hostname:port.

    
{% if arc['metrics']['enabled']|bool %}
  # - job_name: 'cadvisor'
  #   dns_sd_configs:
  #   - names:
  #     # This A-Record is managed by Docker Swarm
  #     - 'tasks.cadvisor'
  #     type: 'A'
  #     port: 9009

  - job_name: 'cadvisor'
    static_configs:
    - targets:
{% for host in groups['cluster'] %}
      - "{{ hostvars[host].ansible_hostname }}.{{ arc['space']['space_domain'] }}:9009"
{% endfor %}
    metrics_path: /metrics

  - job_name: 'dockerd'
    static_configs:
    - targets:
{% for host in groups['cluster'] %}
      - "{{ hostvars[host].ansible_hostname }}.{{ arc['space']['space_domain'] }}:9323"
{% endfor %}
    metrics_path: /metrics
  
  - job_name: 'victoria'
    static_configs:
    - targets:
      - "{{ apollo_manager }}:8428"
    metrics_path: /metrics
  
  - job_name: 'grafana'
    static_configs:
    - targets:
      - "{{ apollo_manager }}:3000"
    metrics_path: /metrics

  - job_name: 'node-exporter'
    static_configs:
    - targets:
{% for host in groups['cluster'] %}
      - "{{ hostvars[host].ansible_hostname }}.{{ arc['space']['space_domain'] }}:9100"
{% endfor %}
    metrics_path: /metrics

  - job_name: 'process-exporter'
    static_configs:
    - targets:
{% for host in groups['cluster'] %}
      - "{{ hostvars[host].ansible_hostname }}.{{ arc['space']['space_domain'] }}:9256"
{% endfor %}
    metrics_path: /metrics

    # dns_sd_configs:
    # - names:
    #   # This A-Record is managed by Docker Swarm
    #   - 'tasks.node-exporter'
    #   type: 'A'
    #   port: 9100

  - job_name: 'traefik'
    static_configs:
    - targets:
      - "{{ apollo_manager }}:8082"
    metrics_path: /metrics

  - job_name: 'proxy'
    static_configs:
    - targets:
      - "{{ apollo_manager }}:8080"
    metrics_path: /metrics

  - job_name: 'loki'
    static_configs:
    - targets:
      - "{{ apollo_manager }}:3100"
    metrics_path: /metrics

  - job_name: 'promtail'
    static_configs:
    - targets:
{% for host in groups['cluster'] %}
      - "{{ hostvars[host].ansible_hostname }}.{{ arc['space']['space_domain'] }}:9080"
{% endfor %}
    metrics_path: /metrics

{% endif %}

{% if 'minio' in arc['addons'] %}
  - job_name: 'minio'
    dns_sd_configs:
      - names:
        # This A-Record is managed by Docker Swarm
        - 'tasks.minio'
        type: 'A'
        port: 9000
    metrics_path: /minio/prometheus/metrics
{% endif %}

{% if arc['addons']['gitlab-runner']['enabled']|bool %}
  - job_name: 'giltlab-runner'
    static_configs:
    - targets:
{% if arc['addons']['gitlab-runner']['build']['enabled']|bool %}
{% for host in groups['cluster'] %}
      - "{{ hostvars[host].ansible_hostname }}.{{ arc['space']['space_domain'] }}:9252"
{% endfor %}
{% elif arc['addons']['gitlab-runner']['deploy']['enabled']|bool %}
{% for host in groups['manager'] %}
      - "{{ hostvars[host].ansible_hostname }}.{{ arc['space']['space_domain'] }}:9252"
{% endfor %}
{% endif %}
    metrics_path: /metrics
{% endif %}

{% if arc['data']['provider'] == "storidge" %}
  - job_name: 'cio-exporter'
    static_configs:
    - targets:
      - "{{ apollo_manager }}:16995"
    metrics_path: /metrics
{% endif %}

