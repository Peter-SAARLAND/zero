version: '3.7'

services:
  prometheus:
    image: "{{ images.nodered }}"
    networks: 
      - proxy
      - monitoring
      - nodered
    volumes: 
      - nodered-data:/data
      - "{{ app_dir }}:/etc/prometheus"
    deploy:
      mode: replicated
      replicas: 1
      restart_policy:
        condition: any
      placement:
        constraints: 
        - "node.hostname == {{ hostvars[groups['manager'][0]]['ansible_hostname'] }}"
      labels:
        traefik.enable: "true"
        traefik.tags: "proxy"
        traefik.docker.network: "proxy"
        traefik.port: "1880"
        traefik.frontend.rule: "Host:{{ app_domain }}"
        traefik.backend: "{{ app_domain }}"
        traefik.protocol: "http"
        traefik.backend.loadbalancer.stickiness: "true"
        traefik.frontend.auth.basic.users: "{{admin_user}}:{{admin_password_hash}}"
{% if letsencrypt_enabled|bool %}
        traefik.frontend.entryPoints: "http,https"
        traefik.frontend.headers.SSLRedirect: "true"
{% else %}
        traefik.frontend.entryPoints: "http"
{%endif%}

networks:
  monitoring:
    driver: overlay
    external: true
  proxy:
    driver: overlay
    external: true
  nodered:
    driver: overlay
    attachable: true

volumes:
  nodered-data:
{% if apollo_data == "storidge" %}
    driver: cio
    driver_opts: 
      profile: "SNAPSHOT"
{% endif %}